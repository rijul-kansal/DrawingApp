<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/drawingview_bg"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/imageset_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/img_1"/>
        <com.example.drawingapp.DrawingView
            android:id="@+id/drawingview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"/>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/framelayout"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/colorBlack_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:tag="@color/black"
            android:background="@color/black"
            android:onClick="setColor"
            android:src="@drawable/color_bg" />
        <ImageButton
            android:id="@+id/colorGrey_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:background="@color/grey"
            android:tag="@color/grey"
            android:onClick="setColor"
            android:src="@drawable/color_bg" />
        <ImageButton
            android:id="@+id/colorBlue_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:background="@color/blue"
            android:tag="@color/blue"
            android:onClick="setColor"
            android:src="@drawable/color_bg" />
        <ImageButton
            android:id="@+id/colorPink_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:background="@color/pink"
            android:tag="@color/pink"
            android:onClick="setColor"
            android:src="@drawable/color_bg" />
        <ImageButton
            android:id="@+id/colorPurple_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:background="@color/purple"
            android:tag="@color/purple"
            android:onClick="setColor"
            android:src="@drawable/color_bg" />
        <ImageButton
            android:id="@+id/colorGreen_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:background="@color/green"
            android:tag="@color/green"
            android:onClick="setColor"
            android:src="@drawable/color_bg" />
        <ImageButton
            android:id="@+id/colorYellow_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:background="@color/yellow"
            android:tag="@color/yellow"
            android:onClick="setColor"
            android:src="@drawable/color_bg" />
        <ImageButton
            android:id="@+id/colorRed_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:background="@color/red"
            android:tag="@color/red"
            android:onClick="setColor"
            android:src="@drawable/color_bg" />
        <ImageButton
            android:id="@+id/colorSkin_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:background="@color/skin"
            android:tag="@color/skin"
            android:onClick="setColor"
            android:src="@drawable/color_bg" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/framelayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/brush_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:background="@drawable/border"
            android:src="@drawable/brush_vec" />
        <ImageButton
            android:id="@+id/gallery_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:background="@drawable/border"
            android:src="@drawable/gallery_vec" />
        <ImageButton
            android:id="@+id/undo_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:background="@drawable/border"
            android:src="@drawable/undo_vec" />
        <ImageButton
            android:id="@+id/redo_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:background="@drawable/border"
            android:src="@drawable/redo_vec" />
        <ImageButton
            android:id="@+id/save_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:background="@drawable/border"
            android:src="@drawable/save_vec" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>